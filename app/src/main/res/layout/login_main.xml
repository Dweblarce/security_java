<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorprimary"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="607dp"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:id="@+id/textAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@color/white"
        android:gravity="center"
        android:fontFamily="@font/roboto_normal"
        android:textSize="40sp"
        android:layout_marginBottom="20dp" />


        <EditText
            android:id="@+id/textPhone"
            android:layout_width="303dp"
            android:layout_height="63dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:fontFamily="@font/roboto_normal"
            android:hint="Usuario/telefono"
            android:inputType="phone"
            android:textSize="18dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt" />


        <EditText
            android:id="@+id/TextPassword"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_normal"
            android:inputType="textPassword"
            android:textSize="18dp"
            android:hint="ContraseÃ±a"
            android:padding="20dp"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_normal"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/btn_circular_white"
            android:text="@string/btn_inicio_sesion"
            android:textColor="@color/white">

        </Button>
    </LinearLayout>
</RelativeLayout>