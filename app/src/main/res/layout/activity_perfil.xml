<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutPrincipalPerfil"
    android:background="@color/colorprimary"
    tools:context=".PerfilActivity">


    <LinearLayout
        android:id="@+id/myContentModal"
        android:background="@drawable/modal_fondo"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/campana_notif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noti_modal_PIN"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_normal"
            android:gravity="center"
            android:textSize="17sp" />

        <Button
            android:id="@+id/ir_a_notificaciones"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_circular_azul"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/ir_a_noti"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/overbox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:background="@drawable/fondo_opaco">

    </LinearLayout>






    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnvolver"
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/icon_volver"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/perfil"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topesquinas_redondeadas"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/img_perfil"
            android:layout_width="211dp"
            android:layout_height="80dp"
            android:layout_marginBottom="6dp"
            android:contentDescription="@string/editaFoto"
            app:srcCompat="@drawable/icon_avatar" />


        <EditText
            android:id="@+id/fullName"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="username"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/Nombre_completo"
            android:inputType="textPersonName"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/rutUser"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="name"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/Rut"
            android:inputType="text"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/numberPhone"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="phone"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/Ntelefono"
            android:inputType="number"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp"
            tools:ignore="TextFields" />

        <EditText
            android:id="@+id/nameBussines"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="name"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/empresa"
            android:inputType="textPersonName"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/nameInstalacion"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="name"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/instalacion"
            android:inputType="textPersonName"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/numberEmergency"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:autofillHints="phone"
            android:background="@drawable/bordes_textos"
            android:fontFamily="@font/roboto_normal"
            android:hint="@string/Nemergencia"
            android:inputType="number"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textColor="@color/colorcaja_txt"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnPIN"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_circular_azul"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/generatupin"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/cambiarPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/cambiarPass"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_circular_azul"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/cambiatucontrasena"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/editperfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/editperfil"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_circular_azul"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/editaperfil"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/logout"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/btn_circular_azul"
            android:fontFamily="@font/roboto_normal"
            android:text="@string/cerrarsesion"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>